# Database Configuration
DATABASE_URL=postgresql://betting_user:your_password@localhost:5432/betting_ai_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Polymarket Configuration (Crypto Betting Platform)
POLYMARKET_PRIVATE_KEY=your_polygon_private_key_here_0x...
POLYMARKET_FUNDER_ADDRESS=your_funder_address_here_0x... # Optional, only for proxy wallets
POLYMARKET_SIGNATURE_TYPE=0  # 0=EOA (default), 1=Magic/Email, 2=Proxy
POLYMARKET_HOST=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137  # Polygon mainnet
POLYMARKET_DEFAULT_CURRENCY=USDC

# Cryptocurrency Wallet Configuration (Polygon)
WALLET_PRIVATE_KEY=your_polygon_wallet_private_key_here
POLYGON_RPC_URL=https://polygon-rpc.com/
WALLET_ADDRESS=your_wallet_address_here

# Legacy BSC Support (Optional)
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Sports Data APIs
ODDS_API_KEY=c169c73c3a9eeaac3f3e7b6c0a1fef89
SPORTRADAR_API_KEY=your_sportradar_api_key_here
RAPID_API_KEY=your_rapid_api_key_here

# System Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DATA_UPDATE_INTERVAL=60
MODEL_RETRAIN_INTERVAL=86400

# ML Model Configuration (Leans.ai Inspired)
MIN_CONFIDENCE_THRESHOLD=0.70  # 70% minimum (was 0.65)
MIN_EXPECTED_VALUE=1.08  # 8% edge after vig (was 1.05)
MAX_RISK_SCORE=0.65  # Maximum 65% risk (was 0.7)
TIME_WINDOW_HOURS=24
VIG_RATE=0.0476  # Standard -110 juice (4.76%)

# Unit Sizing (Leans.ai Style)
MAX_UNIT_SIZE=5.0  # Maximum units per bet
BASE_UNIT_AMOUNT=100  # Base unit in USD

# Backtesting Configuration
BACKTEST_SAMPLE_SIZE=10000
BACKTEST_START_DATE=2023-01-01

# Security
SECRET_KEY=your_secret_key_here_change_in_production
API_RATE_LIMIT=100

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
ENABLE_PROMETHEUS=true
